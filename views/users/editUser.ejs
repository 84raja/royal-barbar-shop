<%-include('../layouts/header.ejs')-%>

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur"
        navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Users</a>
                    </li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Index</li>
                </ol>
            </nav>
            <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4 d-flex justify-content-end" id="navbar">

                <ul class="navbar-nav d-flex justify-content-end">

                    <form action="/auth/logout" method="post">
                        <li class="nav-item d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body font-weight-bold px-0">
                                <i class="fa fa-user me-sm-1"></i>
                                <button type="submit" style="border:none ;">
                                    <span class="d-sm-inline d-none">Sign Out</span>
                                </button>

                            </a>
                        </li>
                    </form>
                    <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                        <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                            <div class="sidenav-toggler-inner">
                                <i class="sidenav-toggler-line"></i>
                                <i class="sidenav-toggler-line"></i>
                                <i class="sidenav-toggler-line"></i>
                            </div>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <div class="row mt-2" id="message">
        <div class="col-md-12" id="text-message">
            <% if (messages.error) { %>
            <div class="alert alert-danger"><%- messages.error %> </div>
            <% } %>
            <% if (messages.success) { %>
            <div class="alert alert-success"><%- messages.success %> </div>
            <% } %>
        </div>
    </div>
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0 text-uppercase">
                        <h6>Tambah <%= page_name %> </h6>
                    </div>
                    <div class="container">
                        <div class="px-0 pt-0 pb-2">
                            <form role="form text-left" action="/users/update/<%= user.id %> ?_method=PUT" method="post"
                                class=" mb-5">
                                <div class="form-group">
                                    <label for="">
                                        <p class="mb-0">Nama :</p>
                                    </label>
                                    <input type="text" name="nama" value="<%= user.nama %> " class="form-control"
                                        id="nama" required>
                                </div>
                                <div class="form-group">
                                    <label for="">
                                        <p class="mb-0">Email :</p>
                                    </label>
                                    <input type="email" name="email" value="<%= user.email %>" class=" form-control"
                                        id="email" required>
                                </div>
                                <div class="form-group">
                                    <label for="">
                                        <p class="mb-0">No Telp :</p>
                                    </label>
                                    <input type="text" name="no_telp" value="<%= user.no_telp %>" class=" form-control"
                                        onkeypress="return onlyNumberKey(event)" maxlength="12" minlength="11"
                                        size="50%" required>
                                </div>
                                <div class="form-group">
                                    <label for="">
                                        <p class="mb-0">Alamat :</p>
                                    </label>
                                    <textarea name="alamat" id="alamat" cols="30" rows="5" class="form-control"
                                        id="no_telp" required><%= user.alamat %> </textarea>
                                </div>
                                <div class="form-group">
                                    <label for="">
                                        <p class="mb-0">Role :</p>
                                    </label>
                                    <select name="role" id="role" class="form-control" required>
                                        <option value="<%= user.role %>"><%= user.role %></option>
                                        <% if (!hasOwner) { %>
                                        <option value="Owner">Owner</option>
                                        <% } %>
                                        <option value="Pelanggan">Pelanggan</option>
                                        <option value="Kasir">Kasir</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="">
                                        <p class="mb-0">Password :</p>
                                    </label>
                                    <input type="password" name="password" class="form-control" id="password">
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Simpan</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%-include('../layouts/footer.ejs')-%>