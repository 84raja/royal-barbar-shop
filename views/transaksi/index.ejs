<%-include('../layouts/header.ejs')-%>

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur"
        navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Transaksi</a>
                    </li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Index</li>
                </ol>
            </nav>
            <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4 d-flex justify-content-end" id="navbar">

                <ul class="navbar-nav d-flex justify-content-end">

                    <form action="/auth/logout" method="post">
                        <li class="nav-item d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body font-weight-bold px-0">
                                <i class="fa fa-user me-sm-1"></i>
                                <button type="submit" style="border:none ;">
                                    <span class="d-sm-inline d-none">Sign Out</span>
                                </button>

                            </a>
                        </li>
                    </form>
                    <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                        <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                            <div class="sidenav-toggler-inner">
                                <i class="sidenav-toggler-line"></i>
                                <i class="sidenav-toggler-line"></i>
                                <i class="sidenav-toggler-line"></i>
                            </div>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0 text-uppercase d-flex justify-content-between">
                        <div class=" col-md-4 mr-3">
                            <h6>Table Transaksi <br> (<%= tanggal1  %> s/d <%= tanggal2  %>)</h6>
                        </div>
                        <div class="col-md-8">
                            <form action="/transaksi/lihat" method="post">
                                <div class="row d-flex justify-content-end">
                                    <div class="col-md-4">
                                        <label for="" class="text-sm">Dari </label>
                                        <input type="date" class="form-control" name="tanggal1" value="<%= tanggal1 %>"
                                            required>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="" class="text-sm">Sampai </label>
                                        <input type="date" class="form-control" name="tanggal2" value="<%= tanggal2 %>"
                                            required>
                                        <div class="d-flex justify-content-between mt-1">
                                            <button class="btn btn-success btn-sm  text-xxs mr-2"
                                                id="button-update">Lihat
                                            </button>
                                            <a href="/transaksi/download/<%=tanggal1%>/<%=tanggal2%>"
                                                class="btn btn-info btn-xs  text-xs mr-2">download
                                            </a>
                                        </div>
                                    </div>
                            </form>


                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0" id="user-table">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7"
                                        width="10%">
                                        No</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">
                                        Nama Pelanggan</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">
                                        Kapster</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">
                                        Layanan</th>
                                    <th
                                        class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7 text-center">
                                        Tanggal</th>
                                    <th
                                        class="text-center text-uppercase text-secondary text-sm font-weight-bolder opacity-7">
                                        Harga</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% datas.forEach((element,index) => { %>
                                <tr>
                                    <td class="align-middle mx-2 text-sm">
                                        <h6 class="mb-0 mx-3 text-xs"><%= index+1 %> </h6>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0"><%= element.pelanggan %></p>
                                    </td>
                                    <td class="align-middle text-xs">
                                        <p class="text-xs font-weight-bold mb-0"><%= element.kapster %></p>

                                    </td>
                                    <td class="align-middle ">
                                        <p class="text-xs font-weight-bold mb-0"><%= element.layanan %></p>

                                    </td>
                                    <td class="align-middle">
                                        <p class="text-xs font-weight-bold mb-0 text-center"><%= element.tanggal %>
                                        </p>

                                    </td>
                                    <td class="align-middle text-center">
                                        <p class="text-xs font-weight-bold mb-0"><%= element.harga %></p>
                                    </td>
                                </tr>
                                <% }) %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%-include('../layouts/footer.ejs')-%>